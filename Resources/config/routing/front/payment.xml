<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="front.payment.index" path="/index">
        <default key="_controller">payment.controller.front:indexAction</default>
        <option key="expose">true</option>
    </route>

    <route id="front.payment.confirm" path="/confirm/{processor}">
        <default key="_controller">payment.controller.front:confirmAction</default>
    </route>

    <route id="front.payment.cancel" path="/cancel/{processor}">
        <default key="_controller">payment.controller.front:cancelAction</default>
    </route>

    <route id="front.payment.notify" path="/notify/{processor}">
        <default key="_controller">payment.controller.front:notifyAction</default>
    </route>
</routes>
