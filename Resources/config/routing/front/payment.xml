<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="front.payment.initialize" path="initialize/{token}">
        <default key="_controller">payment.controller.front:initializeAction</default>
        <option key="expose">true</option>
    </route>

    <route id="front.payment.confirm" path="confirm/{token}">
        <default key="_controller">payment.controller.front:confirmAction</default>
        <option key="expose">true</option>
    </route>

    <route id="front.payment.cancel" path="cancel/{token}">
        <default key="_controller">payment.controller.front:cancelAction</default>
        <option key="expose">true</option>
    </route>

    <route id="front.payment.execute" path="execute/{token}">
        <default key="_controller">payment.controller.front:executeAction</default>
        <option key="expose">true</option>
    </route>

    <route id="front.payment.notify" path="notify/{token}">
        <default key="_controller">payment.controller.front:notifyAction</default>
        <option key="expose">true</option>
    </route>
</routes>
