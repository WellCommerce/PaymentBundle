<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="bank_transfer.controller.front" class="WellCommerce\Bundle\PaymentBundle\Controller\Front\BankTransferController">
            <argument type="service" id="payment.manager"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bank_transfer.gateway" class="WellCommerce\Bundle\PaymentBundle\Gateway\OfflinePaymentGateway" shared="false" />

        <service id="bank_transfer.configurator" class="WellCommerce\Bundle\PaymentBundle\Configurator\BankTransferConfigurator" shared="false">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="bank_transfer.processor" class="WellCommerce\Bundle\PaymentBundle\Processor\BankTransferProcessor">
            <argument type="service" id="bank_transfer.gateway"/>
            <argument type="service" id="bank_transfer.configurator"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="payment.processor"/>
        </service>
    </services>
</container>
