<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="payment_method.controller.admin" class="WellCommerce\Bundle\PaymentBundle\Controller\Admin\PaymentMethodController">
            <argument type="service" id="payment_method.manager"/>
            <argument type="service" id="payment_method.form_builder.admin"/>
            <argument type="service" id="payment_method.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="payment_method.doctrine.event_subscriber" class="WellCommerce\Bundle\PaymentBundle\EventListener\PaymentMethodDoctrineEventSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="payment.doctrine.event_subscriber" class="WellCommerce\Bundle\PaymentBundle\EventListener\PaymentDoctrineEventSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="payment_method.dataset.admin" class="WellCommerce\Bundle\PaymentBundle\DataSet\Admin\PaymentMethodDataSet">
            <argument type="service" id="payment_method.repository"/>
            <tag name="dataset" alias="payment_method.admin"/>
        </service>

        <service id="payment_method.dataset.front" class="WellCommerce\Bundle\PaymentBundle\DataSet\Front\PaymentMethodDataSet">
            <argument type="service" id="payment_method.repository"/>
            <tag name="dataset" alias="payment_method.front"/>
        </service>

        <service id="payment_method.datagrid" class="WellCommerce\Bundle\PaymentBundle\DataGrid\PaymentMethodDataGrid">
            <argument type="service" id="payment_method.dataset.admin"/>
            <tag name="datagrid" alias="payment_method"/>
        </service>

        <service id="payment_method.form_builder.admin" class="WellCommerce\Bundle\PaymentBundle\Form\Admin\PaymentMethodFormBuilder" parent="core.form_builder" />

        <service id="payment.processor.collection" class="WellCommerce\Bundle\PaymentBundle\Processor\PaymentProcessorCollection" />

        <service id="payment_method.order.visitor" class="WellCommerce\Bundle\PaymentBundle\Visitor\PaymentMethodOrderVisitor">
            <argument type="service" id="order.modifier.provider"/>
            <tag name="order.visitor" alias="payment_method"/>
        </service>

        <service id="payment_surcharge.order.modifier.configurator" class="WellCommerce\Bundle\OrderBundle\Configurator\OrderModifierConfigurator">
            <argument key="name">payment_surcharge</argument>
            <argument key="description">order.label.payment_surcharge</argument>
            <argument key="subtraction">false</argument>
            <argument key="hierarchy">900</argument>
        </service>

        <service id="payment_surcharge.order.modifier" class="WellCommerce\Bundle\OrderBundle\Entity\OrderModifier">
            <factory service="order_modifier.factory" method="create" />
            <configurator service="payment_surcharge.order.modifier.configurator" method="configure" />
            <tag name="order.modifier" alias="payment_surcharge"/>
        </service>
    </services>
</container>
